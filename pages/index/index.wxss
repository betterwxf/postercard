/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-top: 100px;
}

.input-section {
  width: 100%;
  margin-bottom: 20px;
}

.input-box {
  width: 100%;
  height: 45px;
  background: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 0 15px;
  margin-bottom: 15px;
  box-sizing: border-box;
  text-align: center;
}

.generate-btn {
  width: 100% !important;
  height: 45px;
  background: #ff6b00 !important;
  color: #ffffff;
  border-radius: 8px;
  font-size: 16px;
  line-height: 45px;
  text-align: center;
}

.generate-btn:active {
  opacity: 0.8;
}

.image-section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.generated-image {
  width: 100%;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
